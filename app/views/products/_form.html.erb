  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div class="field">
    <%= form.label :under_sale %>
    <%= form.check_box :under_sale %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :sale_price %>
    <%= form.number_field :sale_price %>
  </div>

  <div class="field">
    <%= form.label :sale_text %>
    <%= form.text_field :sale_text %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
